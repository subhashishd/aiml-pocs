# Excel-PDF-Validator Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# BUILD INFORMATION (Auto-populated by Azure DevOps)
# =============================================================================
BUILD_NUMBER=latest
COMMIT_SHA=dev

# =============================================================================
# DOCKER HUB CONFIGURATION
# =============================================================================
DOCKER_HUB_REPO=your-dockerhub-username/excel-pdf-validator

# =============================================================================
# ORACLE VM CONFIGURATION
# =============================================================================
ORACLE_VM_IP=your.vm.ip.address

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
# Get these from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Comma-separated list of allowed email addresses
ALLOWED_EMAILS=user1@company.com,user2@company.com,admin@company.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=secure-postgres-password

# =============================================================================
# KONG GATEWAY CONFIGURATION
# =============================================================================
KONG_DB_PASSWORD=secure-kong-db-password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate secure random strings for these:
# You can use: openssl rand -hex 32
JWT_SECRET_KEY=your-jwt-secret-key-32-chars-minimum
SESSION_SECRET=your-session-secret-32-chars-minimum

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=secure-redis-password

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Database URL (auto-constructed)
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/validation_agents

# Redis URL (auto-constructed)  
REDIS_URL=redis://redis:6379/0

# Environment
ENVIRONMENT=production
DEBUG=false

# Machine Learning Configuration
USE_MULTIMODAL_PDF=true
SENTENCE_TRANSFORMERS_HOME=/app/models
HF_HOME=/app/models

# Performance Configuration
WORKERS=2
MAX_WORKERS=4
WORKER_TIMEOUT=300

# File Upload Configuration
MAX_UPLOAD_SIZE=50000000  # 50MB
UPLOAD_DIR=/app/uploads

# CORS Configuration (auto-constructed)
ALLOWED_ORIGINS=http://${ORACLE_VM_IP},https://${ORACLE_VM_IP}

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_CONCURRENCY=2
CELERY_MAX_TASKS_PER_CHILD=50
CELERY_TASK_TIME_LIMIT=1800  # 30 minutes

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# React App API URL (auto-constructed)
REACT_APP_API_URL=http://${ORACLE_VM_IP}
REACT_APP_GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
NODE_ENV=production
GENERATE_SOURCEMAP=false

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
FRONTEND_HOST=frontend:3000
BACKEND_HOST=backend:8000
SSL_ENABLED=false
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=1024
