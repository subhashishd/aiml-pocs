# Production Environment Configuration for ValidatorAI
# Copy this file to .env and update with your actual values

# Application
APP_VERSION=latest
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=false
ALLOWED_HOSTS=localhost,your-oracle-vm-host.com,your-domain.com
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_DB=validator_ai
POSTGRES_USER=validator_ai
POSTGRES_PASSWORD=your-postgres-password-change-this

# Redis Configuration
REDIS_PASSWORD=your-redis-password-change-this

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=/app/uploads

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
MODEL_NAME=gpt-3.5-turbo

# Celery Configuration
CELERY_BROKER_URL=redis://:your-redis-password-change-this@redis:6379/1
CELERY_RESULT_BACKEND=redis://:your-redis-password-change-this@redis:6379/2

# Docker Registry (if using external registry)
DOCKER_REGISTRY=your-registry.com

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GRAFANA_PASSWORD=your-grafana-admin-password

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/validator-ai.crt
SSL_KEY_PATH=/etc/ssl/private/validator-ai.key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Oracle VM Specific
ORACLE_VM_HOST=your-oracle-vm-host.com
ORACLE_VM_USER=opc
SSH_KEY_PATH=~/.ssh/oracle_vm_key

# Performance Tuning
WORKERS=4
MAX_CONNECTIONS=100
TIMEOUT=300

# Security
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://your-oracle-vm-host.com
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://your-oracle-vm-host.com
